<main>
    {{#if error}}
    <section class="notifications">
        <p class="notification-message">{{error.message}}</p>
    </section>
    {{/if}}
    <form action="/auth/register" method="POST">
        <h1>Register</h1>

        <p>Personal info</p>
        <label for="username">Username</label>
        <input id="username" type="text" name="username" placeholder="JustMyself123...">

        <label for="password">Password</label>
        <input id="password" type="password" name="password" placeholder="******">

        <label for="rePassword">Repeat Password</label>
        <input id="rePassword" type="password" name="rePassword" placeholder="******">
        <hr>
        <p>Account</p>
        <label for="amount">Amount</label>
        <input id="amount" type="text" name="amount" placeholder="$125.90">

        <button type="submit">Register</button>
    </form>
</main>